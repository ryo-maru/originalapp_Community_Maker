<h2>お気に入り一覧</h2>


<table class="table table-hover">
  <thead>
    <tr>
      <th nowrap>コミュニティid</th>
      <th nowrap>アイコン</th>
      <th nowrap>コミュニティ名</th>
      <th nowrap>コミュニティ説明</th>
      <th nowrap>作成者</th>
      <th nowrap>作成日</th>
      <th nowrap>コメント<i class="fas fa-comment-dots"></i></th>
      <th nowrap>いいね！<i class="fas fa-heart"></i></th>
      <th nowrap>参加者<i class="fas fa-user"></i></th>

    </tr>
  </thead>


    <% @favorite.each do |favorite| %>
      <tr>
        <td><%= favorite.community.id %></td>
        <% if favorite.community.image? %>
        <td><%= image_tag favorite.community.image.url, class:"community_index_icon" %></td>
        <% else %>
        <td><%= image_tag "Noname.png", class:"community_index_icon" %></td>
        <% end %>
        <td nowrap><%= link_to favorite.community.name,community_path(favorite.community.user.id), class: "btn btn--orange" %></td>
        <td nowrap><%= truncate(favorite.community.description, length: 20) %></td>
        <td nowrap><%= link_to favorite.community.user.name,user_path(favorite.community.id) %></td>
        <td nowrap><%= favorite.community.created_at.strftime("%Y-%m-%d") %></td>
        <td nowrap><%= favorite.community.comments.count%></td>
        <td nowrap><%= favorite.community.favorites.count%></td>
        <td nowrap><%= favorite.community.members.count%></td>



      </tr>
  <% end %>
</table>
<%= link_to 'コミュニティ一覧へ戻る', communities_path, class: 'btn btn-default' %>
