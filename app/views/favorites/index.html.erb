<h2>お気に入り一覧</h2>


<table class="table table-hover">
  <thead>
    <tr>
      <th>コミュニティ名</th>
      <th>コミュニティ説明</th>
      <th>作成者</th>
      <th>作成日</th>

    </tr>
  </thead>


    <% @favorite.each do |favorite| %>
      <tr>
        <td><%= favorite.community.name %></td>
        <td><%= favorite.community.description %></td>
        <td><%= favorite.community.user.name %></td>
        <td><%= favorite.community.created_at.strftime("%Y-%m-%d") %></td>


      </tr>
  <% end %>
</table>
<%= link_to 'コミュニティ一覧へ戻る', communities_path, class: 'btn btn-default' %>
