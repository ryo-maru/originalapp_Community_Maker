<h2>お気に入り一覧</h2>


<table class="table table-hover">
  <thead>
    <tr>
      <th>コミュニティid</th>
      <th>コミュニティ名</th>
      <th>コミュニティ説明</th>
      <th>作成者</th>
      <th>作成日</th>
      <th>コメント</th>
      <th>いいね！<i class="fas fa-heart"></i></th>
      <th>参加者<i class="fas fa-user"></i></th>

    </tr>
  </thead>


    <% @favorite.each do |favorite| %>
      <tr>
        <td><%= favorite.community.id %></td>
        <td><%= favorite.community.name %></td>
        <td><%= favorite.community.description %></td>
        <td><%= link_to favorite.community.user.name,user_path(favorite.community.id) %></td>
        <td><%= favorite.community.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= favorite.community.comments.count%></td>
        <td><%= favorite.community.favorites.count%></td>
        <td><%= favorite.community.members.count%></td>



      </tr>
  <% end %>
</table>
<%= link_to 'コミュニティ一覧へ戻る', communities_path, class: 'btn btn-default' %>
