<h1>参加コミュニティ一覧</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>コミュニティ名</th>
      <th>コミュニティ説明</th>
      <th>作成者</th>
      <th>作成日</th>
    </tr>
  </thead>


    <% @member.each do |member| %>
      <tr>
        <td><%= member.community.name %></td>
        <td><%= member.community.description %></td>
        <td><%= member.community.user.name %></td>
        <td><%= member.community.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
  <% end %>
</table>
<%= link_to 'コミュニティ一覧へ戻る', communities_path, class: 'btn btn-default' %>
