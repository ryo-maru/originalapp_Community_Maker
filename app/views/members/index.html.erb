<h2>参加コミュニティ一覧</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>コミュニティ名</th>
      <th>コミュニティ説明</th>
      <th>作成者</th>
      <th>作成日</th>
      <th>コメント</th>
      <th>いいね！<i class="fas fa-heart"></i></th>
      <th>参加者<i class="fas fa-user"></i></th>
    </tr>
  </thead>


    <% @member.each do |member| %>
      <tr>
        <td><%= member.community.name %></td>
        <td><%= member.community.description %></td>
        <td><%= member.community.user.name %></td>
        <td><%= member.community.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= member.community.comments.count%></td>
        <td><%= member.community.favorites.count%></td>
        <td><%= member.community.members.count%></td>
      </tr>
  <% end %>
</table>
<%= link_to 'コミュニティ一覧へ戻る', communities_path, class: 'btn btn-default' %>
