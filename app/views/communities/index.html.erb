
<h1>Communities</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>コミュニティ名</th>
      <th>コミュニティ説明</th>
      <th>作成者</th>
      <th>作成日時</th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= community.name %></td>
        <td><%= community.description %></td>
        <td><%= community.user.name %></td>
        <td><%= community.created_at.strftime("%Y-%m-%d %H:%M") %></td>




        <td><%= link_to '詳しく', community,class: 'btn btn-info' %></td>
         <% if community.user == current_user %>
        <td><%= link_to '編集', edit_community_path(community), class: 'btn btn-success' %></td>
        <td><%= link_to '削除', community,  class: 'btn btn-warning',method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>



  </tbody>
</table>

<br>


