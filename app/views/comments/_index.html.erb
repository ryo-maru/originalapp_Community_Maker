<ul>
<table class="table table-hover">
  <thead>
    <tr>
      <th>コメント内容</th>
      <th>コメント者</th>
      <th>コメント投稿日時</th>
    </tr>
  </thead>

<tbody>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <tr>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <td><%= comment.content %></td>
        <td><%= comment.user.name %></td>
        <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %></td>

        <% if comment.user == current_user %>
        <td><%= link_to "編集", edit_community_comment_path(community, comment),remote: true %></td>
        <td><%= link_to "削除", community_comment_path(comment.community_id, comment.id),method: :delete, remote: true,
                                       data: { confirm: "本当に削除しますか?"} %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>

</tbody>
</table>
</ul>
